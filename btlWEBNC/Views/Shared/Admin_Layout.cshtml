<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Trang Admin</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial;
        }

        .admin-container {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        /* Header */
        .admin-header {
            background-color: #1e90ff;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            padding: 15px 20px;
            display: flex;
            justify-content: flex-end;
            align-items: center;
        }

        .admin-header button {
            padding: 8px 15px;
            margin-left: 15px;
            border: none;
            border-radius: 5px;
            color: white;
            cursor: pointer;
        }

        .btn-blue {
            background: #FFB200;
        }

        .btn-red {
            background: #e74c3c;
        }

        /* Content Area */
        .admin-content {
            display: flex;
            flex-grow: 1;
        }

        /* Navbar */
        .admin-navbar {
            width: 250px;
            background-color: #2c3e50;
            color: white;
            padding: 20px;
        }

        .navbar-brand {
            font-size: 24px;
            text-align: center;
            margin-bottom: 30px;
            color: white;
        }

        .nav-item {
            padding: 15px;
            margin-bottom: 10px;
        }

        .nav-item a {
            color: white;
            text-decoration: none;
            display: block;
        }

        .nav-item:hover {
            background-color: #1e90ff;
            border-radius: 5px;
        }

        .nav-item i {
            margin-right: 10px;
        }

        /* Main Display Area */
        .main-display {
            flex-grow: 1;
            background-color: #f5f6fa;
            padding: 20px;
            overflow-y: auto;
        }

        /* Footer */
        .admin-footer {
            background-color: #1e90ff;
            color: white;
            text-align: center;
            padding: 15px;
        }

      
    </style>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="admin-container">
        <!-- Header -->
        <div class="admin-header">
            <button class="btn-blue" onclick="location.href='@Url.Action("ChangePassword", "Account")'">
                <i class="fas fa-key"></i>
                Đổi mật khẩu
            </button>
            <form asp-controller="Account" asp-action="Logout" method="post" style="display: inline;">
                <button type="submit" class="btn-red">
                    <i class="fas fa-sign-out-alt"></i>
                    Đăng xuất
                </button>
            </form>
        </div>

        <!-- Content Area -->
        <div class="admin-content">
            <!-- Navbar -->
            <div class="admin-navbar">
                <div class="navbar-brand">
                    <i class="fas fa-graduation-cap"></i> ADMIN
                </div>
                <div class="nav-items">
                    <div class="nav-item">
                        <a asp-controller="Admin" asp-action="Index">
                            <i class="fas fa-home"></i> Trang chủ
                        </a>
                    </div>
                    <div class="nav-item">
                        <a asp-controller="Admin" asp-action="StudentManagement">
                            <i class="fas fa-user-graduate"></i> Quản lý học sinh
                        </a>
                    </div>
                    <div class="nav-item">
                        <a asp-controller="Admin" asp-action="TeacherManagement">
                            <i class="fas fa-chalkboard-teacher"></i> Quản lý giáo viên
                        </a>
                    </div>
                    <div class="nav-item">
                        <a asp-controller="Admin" asp-action="PhanQuyen">
                            Quản lý phân quyền
                        </a>
                    </div>
                </div>
            </div>

            <!-- Main Display Area -->
            <div class="main-display">
                @RenderBody()
            </div>
        </div>

        <!-- Footer -->
        <div class="admin-footer">
            <p>&copy; Created in 2024 - All Rights Reserved</p>
        </div>
    </div>

    @await RenderSectionAsync("Scripts", required: false)
   
    
</body>
</html>