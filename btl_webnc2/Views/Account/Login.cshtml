@model btl_webnc2.Models.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EduConnect - Đăng nhập</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Arial', sans-serif;
            background-color: #f0f8ff;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .container {
            border: 1px solid #e0e0e0;
            width: 90%;
            max-width: 450px;
            background-color: white;
            display: flex;
            flex-direction: column;
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        }

        h2 {
            text-align: center;
            color: #1e90ff;
            margin-bottom: 40px;
            font-size: 32px;
        }

        label {
            margin-top: 20px;
            color: #555;
            font-weight: bold;
            font-size: 18px;
        }

        input[type="text"], input[type="password"] {
            width: 100%;
            padding: 15px;
            margin-top: 10px;
            border: 1px solid #ddd;
            border-radius: 8px;
            font-size: 16px;
            transition: border-color 0.3s;
            box-sizing: border-box;
        }

            input[type="text"]:focus, input[type="password"]:focus {
                border-color: #1e90ff;
                outline: none;
                box-shadow: 0 0 5px rgba(30,144,255,0.5);
            }

        input[type="submit"] {
            margin-top: 30px;
            padding: 10px;
            background-color: #1e90ff;
            color: white;
            border: none;
            border-radius: 30px;
            cursor: pointer;
            font-size: 20px;
            width: 100%;
            transition: all 0.3s;
            font-weight: bold;
        }

            input[type="submit"]:hover {
                background-color: #4169e1;
                transform: translateY(-2px);
                box-shadow: 0 4px 10px rgba(30,144,255,0.3);
            }

        a {
            text-decoration: none;
            color: #1e90ff;
            transition: color 0.3s;
        }

            a:hover {
                color: #4169e1;
                text-decoration: underline;
            }

        .signup-link {
            text-align: center;
            margin-top: 30px;
            font-size: 16px;
        }

        .forgot_password {
            text-align: right;
            margin-top: 15px;
            font-size: 16px;
        }

        .form-group {
            margin-bottom: 25px;
        }

        .error-message {
            color: red;
            font-size: 14px;
            margin-top: 5px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>EduConnect</h2>
        <div asp-validation-summary="All" class="error-message"></div>
        <form asp-action="Login" asp-controller="Account" method="post">
            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" type="text">
                <span class="error-message" asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">Mật khẩu</label>
                <input asp-for="Password" type="password">
                <span class="error-message" asp-validation-for="Password"></span>
            </div>
            <div class="forgot_password">
                <a href="@Url.Action("ForgotPassword", "Account")">Quên mật khẩu?</a>
            </div>
            <div>
                <input type="submit" value="Đăng nhập">
            </div>
            <div class="signup-link">
                <p>Chưa có tài khoản? <a href="@Url.Action("Register","Account")">Đăng ký ngay</a></p>
            </div>
        </form>
    </div>

</body>

</html>
